configuration {
  font: "JetBrains Mono 12";
  show-icons: true;
}

window {
  background: rgba(12,12,14,0.9);
  border-radius: 12px;
  border: 1px solid rgba(51,204,255,0.12);
  padding: 8px;
}

inputbar {
  background: rgba(20,20,24,0.8);
  border-radius: 10px;
  padding: 8px;
}

listview {
  padding: 6px;
}

element {
  padding: 8px;
  border-radius: 8px;
}

element:selected {
  background: linear-gradient(90deg, rgba(51,204,255,0.10), rgba(0,255,153,0.04));
  color: #e8fefe;
}
